<%= stylesheet_link_tag 'index', :media => "all" %>

<div class="tweets-container">
<h3>Tweet一覧</h3>
  <% @tweets.each do |t| %>
    <div class="tweet">
      <%= t.user.email %>
      <div class="main-box">
        <div class="left-container"><%= t.body %></div>
        <div class="right-container">
          <%= link_to "詳細", tweet_path(t.id) ,class: "editlink"%>
          <%= link_to "編集", edit_tweet_path(t.id),class: "editlink" %>
          <%= link_to "削除", tweet_path(t.id), method: :delete ,class: "editlink"%>
        </div>
      </div>
        <p class="time"><%= t.created_at %></p>
    </div>
  <% end %>
  <div class= "link-list">
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete ,class: "editlink"%>
      <%= link_to "新規投稿ページ",tweets_new_path ,class: "editlink" %>
      <%= link_to "Topへ", root_path,class: "editlink"%>
  </div>
  <div class="page-nate">
      <%= page_entries_info @tweets %>
      <%= paginate @tweets %>
  </div>


</div>
