<!DOCTYPE html>
<html>
  <head>
    <title>Rubytwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>RubyTwitter</h1>
      <div class="header-list">
       <ul>
         <li><%= link_to "Tweet一覧", tweets_path %></li>
         <li><%= link_to "新規投稿", tweets_new_path %></li>
       </ul>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <p>Copyright © NakagawaTomotaro All Rights Reserved.</p>
    </footer>
  </body>
</html>
